<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="240dip"
        android:layout_height="28.0dip"
        android:background="#ff313131"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:text="分类"
        android:textColor="#ff959595"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/TextView_PlateInfo"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawableLeft="@drawable/plate"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="车牌识别结果"
        android:textColor="#ff000000"
        android:textSize="16.0sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <TextView
        android:id="@+id/TextView_CpaturePicInfo"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_2"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="截图结果"
        android:textColor="#ff000000"
        android:textSize="16.0sp" />
     <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <TextView
        android:id="@+id/TextView_about"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawableLeft="@drawable/about"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="关于一体机工具"
        android:textColor="#ff000000"
        android:textSize="16.0sp" />

</LinearLayout>
