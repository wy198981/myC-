<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_normal"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <TextView
            android1:id="@+id/textView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="闸口号:" />

        <Spinner
            android1:id="@+id/spinner_gateNum"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android1:entries="@array/gateNum" />

    </LinearLayout>

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:orientation="horizontal" >

        <Button
            android1:id="@+id/button_openGate"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:background="@drawable/btn_bg"
            android1:text="开闸"
            android1:textColor="#ffffffff"
            android1:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
