                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <RadioButton Name="rbt1" Content="京" HorizontalAlignment="Center" Height="auto"  VerticalAlignment="Center" Width="auto" FontSize="20"/>
