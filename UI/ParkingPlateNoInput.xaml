        <SFMControls:ButtonSfm Name="btnCancel" Content="取   消" HorizontalAlignment="Left" Height="32" Margin="341,358,0,0" VerticalAlignment="Top" Width="88" FontSize="15" Click="btnCancel_Click"/>
        <DataGrid Name="dgvCarIn" HorizontalAlignment="Left" Height="100" Margin="318,171,0,0" VerticalAlignment="Top" Width="157" AutoGenerateColumns="False" CanUserAddRows="False" Visibility="Hidden" SelectionChanged="dgvCarIn_SelectionChanged">
