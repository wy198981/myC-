                <RadioButton Name="rbt13" Content="闽" Grid.Column="2" HorizontalAlignment="Center" Height="auto"  Grid.Row="2" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt14" Content="赣" Grid.Column="3" HorizontalAlignment="Center" Height="auto"  Grid.Row="2" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt15" Content="鲁" Grid.Column="4" HorizontalAlignment="Center" Height="auto"  Grid.Row="2" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt16" Content="豫" HorizontalAlignment="Center" Height="auto" Grid.Row="3" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt17" Content="鄂" Grid.Column="1" HorizontalAlignment="Center" Height="auto"  Grid.Row="3" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt18" Content="蒙" Grid.Column="2" HorizontalAlignment="Center" Height="auto"  Grid.Row="3" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt19" Content="津" Grid.Column="3" HorizontalAlignment="Center" Height="auto" Grid.Row="3" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt20" Content="桂" Grid.Column="4" HorizontalAlignment="Center" Height="auto"  Grid.Row="3" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt21" Content="琼" HorizontalAlignment="Center" Height="auto"  Grid.Row="4" VerticalAlignment="Center" Width="auto" FontSize="20"/>
                <RadioButton Name="rbt22" Content="渝" Grid.Column="1" HorizontalAlignment="Center" Height="auto"  Grid.Row="4" VerticalAlignment="Center" Width="auto" FontSize="20"/>
