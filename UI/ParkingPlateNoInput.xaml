                <DataGridTextColumn Header="车牌号码" Binding="{Binding CPH}" IsReadOnly="True" FontSize="15" Width="*" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox Name="cmbCarNumber" HorizontalAlignment="Left" Height="auto" Margin="409,322,0,0" VerticalAlignment="Top" Width="93" FontSize="15" Visibility="Hidden"/>

