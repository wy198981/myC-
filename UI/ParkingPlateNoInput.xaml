                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="rbtPT" Content="普通" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Center" Width="auto" FontSize="20" IsChecked="True" Click="rbtPT_Click"/>
